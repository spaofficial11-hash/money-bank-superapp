# Server
PORT=3000
NODE_ENV=development

# Firebase Admin SDK (service account style)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@project.iam.gserviceaccount.com
# If the private key contains literal newlines, replace them with \n when storing in env.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEv...your_key_here...IDAQAB\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-firebase-project-id.firebaseio.com

# Firebase config for client (if needed by frontend)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# JWT (for signing auth tokens if you use JWT)
JWT_SECRET=replace_with_a_strong_random_secret
JWT_EXPIRES_IN=7d

# Admins (comma-separated list of admin emails)
ADMIN_EMAILS=admin1@example.com,admin2@example.com

# Telegram bot (for notifications / chat sync)
TELEGRAM_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZ
TELEGRAM_ADMIN_CHAT_ID=987654321

# Payment gateway keys (examples)
PAYTM_MERCHANT_ID=your_paytm_mid
PAYTM_MERCHANT_KEY=your_paytm_mkey

PHONEPE_MERCHANT_ID=your_phonepe_mid
PHONEPE_SECRET=your_phonepe_secret

GUPYUPI_UPI_VPA=your_upi_vpa@example
GUPYUPI_API_KEY=your_upi_provider_api_key

# Webhook / Callback URLs (update to real domain)
WEBHOOK_BASE_URL=https://your-domain.com/api
PAYMENT_CALLBACK_URL=${WEBHOOK_BASE_URL}/payments/callback
TELEGRAM_WEBHOOK_URL=${WEBHOOK_BASE_URL}/telegram/webhook

# Misc
LOG_LEVEL=info
ENABLE_DEV_TOOLS=true
